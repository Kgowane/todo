

<h1>To do Lists:</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @lists.each do |list| %>
  <%= link_to 'Add List Form', new_list_path(list) %><br><br>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.description %></td>
      <td><%= link_to 'Add New Item', new_list_path(list) %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Delete', list_path(list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>
</table>
